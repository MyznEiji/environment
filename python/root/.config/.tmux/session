
# 一番初めのpaneを選択
select-pane -t 0
# 上下にウィンドウを分割する
split-window -v
# 1番目(下側)のウィンドウを選択
select-pane -t 0 
# 左右にウィンドウを分割
split-window -h

resize-pane -R -t 1 40
# 上下分割レイアウトを反映
# select-layout main-horizontal
# display-panes

# 2番目(右下)のpaneの横幅（境界)を右に22文字幅移動する

# メインとなるウィンドウの高さを35行に設定
resize-pane -D -t 0 21

select-pane -t 2

split-window -h

resize-pane -R -t 2 40
