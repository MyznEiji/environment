# tmux起動
alias tmux_cus='tmux new-session \; source-file ~/.config/.tmux/session'

# tmux
alias tmux='tmux -u -2'
alias ta="tmux a"
alias tl="tmux ls"
alias tk="tmux kill-session"
alias tfin="tmux kill-server"

# linux
alias ls="ls -AF --color"
alias rm="rm -i"

# neovimのエイリアス
alias vi='nvim'

# bash
alias bp='vi ~/.bash_profile'
alias br='vi ~/.bashrc'
alias ba='vi ~/.bash_aliases'
alias sbp='source ~/.bash_profile'
alias sbr='source ~/.bashrc'
alias sba='source ~/.bash_aliases'

alias python3="python3.7"
